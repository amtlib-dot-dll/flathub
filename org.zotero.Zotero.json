{
    "id": "org.zotero.Zotero",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.26",
    "sdk": "org.gnome.Sdk",
    "command": "zotero",
    "rename-desktop-file": "zotero.desktop",
    "rename-icon": "zotero",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--share=network",
        "--filesystem=home:ro",
        "--filesystem=~/.zotero:create",
        "--filesystem=~/Zotero"
    ],
    "modules": [
        {
            "name": "zotero",
            "buildsystem": "simple",
            "sources": [{
                "type": "archive",
                "url": "https://download.zotero.org/client/release/5.0.33/Zotero-5.0.33_linux-x86_64.tar.bz2",
                "sha256": "85cef27f039259548597ece3ba31d38f33a6975971e036f1a105dac598dcb0d4"
            },
            {
                "type": "file",
                "path": "org.zotero.Zotero.appdata.xml"
            }],
            "build-commands": [
                "mkdir -p /app/bin /app/share /app/share/icons/hicolor/{16x16,32x32,48x48,256x256}/apps /app/share/appdata",
                "cp -R . /app/share/zotero",
                "cp chrome/icons/default/default16.png /app/share/icons/hicolor/16x16/apps/zotero.png",
                "cp chrome/icons/default/default32.png /app/share/icons/hicolor/32x32/apps/zotero.png",
                "cp chrome/icons/default/default48.png /app/share/icons/hicolor/48x48/apps/zotero.png",
                "cp chrome/icons/default/default256.png /app/share/icons/hicolor/256x256/apps/zotero.png",
                "desktop-file-install --dir=/app/share/applications --set-key=Exec --set-value=zotero --set-key=Icon --set-value=org.zotero.Zotero zotero.desktop",
                "cp org.zotero.Zotero.appdata.xml /app/share/appdata",
                "ln -s /app/share/zotero/zotero /app/bin/zotero"
            ]
        }
    ]
}
